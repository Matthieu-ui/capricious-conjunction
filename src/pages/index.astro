---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";
import type { Post } from "@/data/posts";
import { Icon } from "astro-icon";
const MAX_POSTS = 10;
const allPosts = await Astro.glob<Post>("./posts/*.mdx");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
// import Gallery from "../components/react/Gallery.jsx";
---

<PageLayout meta={{ title: "Home" }}>
  <section class="mb-8">
    <h1 class="title text-2xl mb-4">Web & Software Developer | Carpenter</h1>
    <p class="text-lg mb-4">
      At <strong>Uresco Construction Materials</strong>, I combine full-stack web development with hands-on carpentry experience to build innovative solutions for the lumber and construction industry. From warehouse management systems to 3D visualization tools and geolocation-based logistics apps, I create practical software that solves real-world problems.
    </p>
    <SocialList />
  </section>

  <section class="mt-12">
    <h2 class="title mb-4 text-xl">Current Focus</h2>
    <p class="mb-4">
      Currently focused on building solutions for Uresco Construction Materials. I'm developing warehouse management systems, 3D visualization tools, and geolocation-based logistics applications to optimize lumber and materials operations.
    </p>
    <p class="mb-4">
      Check out my <a class="hover:underline" href="https://github.com/matthieu-ui" target="_blank" rel="noopener noreferrer">GitHub</a> for my open source work and previous projects.
    </p>
  </section>

</PageLayout>
