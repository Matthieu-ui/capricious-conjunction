---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";
import type { Post } from "@/data/posts";
import DesignMenu from "@/components/DesignMenu";
import WebsiteMenu from "@/components/WebsiteMenu";

const MAX_POSTS = 10;
const allPosts = await Astro.glob<Post>("./posts/*.mdx");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

---

<PageLayout meta={{ title: "Home" }}>
  <section>
    <h1 class="title mb-6">Hello World!</h1>
    <p class="mb-4">
      Hi, My name is <strong>Matthieu Felker</strong>, I am a developer based
      out of <strong>Seattle, WA</strong>. I am currently available for contract work and seeking
      a full time employment opportunity as a front-end developer &#8212;locally
      or remote! <strong>I am passionate about building accessible, performant and
      appealing websites & applications.</strong>
    </p>
    <SocialList />
  </section>
  <div class="section-grid">
    <section aria-label="Blog post list" class="mt-16">
      <h2 class="title mb-4 text-xl">Projects</h2>
      <ul class="space-y-4 sm:space-y-2">
        {
          allPostsByDate.map((p) => (
            <li class="flex flex-wrap items-center gap-x-2 [&_q]:w-full">
              <PostPreview post={p} as="h2" />
            </li>
          ))
        }
      </ul>
    </section>
    </div>
    
  <section class="mt-16">
    <h2 class="title mb-4 text-xl">Holopin Board</h2>
    <p class="pb-4">Verifiable digital badges.</p>
    <a href="https://holopin.io/@mattman">
      <img
        src="https://holopin.me/@mattman"
        alt="Matthieu's Holopin board"
        class="rounded-xl cursor-pointer grayscale-50 hover:grayscale-0 transform-gpu duration-200"
      />
    </a>
  </section>
</PageLayout>
